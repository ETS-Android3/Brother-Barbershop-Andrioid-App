<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brother_barbershop">

    <application
        android:allowBackup="true"
        android:icon="@drawable/barberlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".BarbersActivity" />
        <activity android:name=".ServicesActivity" />
        <activity android:name=".AppointmentActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>