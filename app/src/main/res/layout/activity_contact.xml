<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcontact"
    android:orientation="vertical"
    tools:context=".ContactActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="99dp"
        android:layout_height="111dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="150dp"
        app:srcCompat="@drawable/show" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are ready to help you"
        android:textAlignment="center"
        android:textColor="#FF1616"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Service hour is"
        android:textAlignment="center"
        android:textColor="#05F0D5"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday-Friday(9:00am-10:00pm)"
        android:textAlignment="center"
        android:textColor="#FCFBFB"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday-Saturday(9:00am-4:00pm)"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="202dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="149dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/l1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="252dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/l2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="304dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/l3" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="49dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="151dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/l4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="252dp"
            android:layout_marginBottom="308dp"
            android:background="@drawable/l5" />

    </RelativeLayout>

</LinearLayout>